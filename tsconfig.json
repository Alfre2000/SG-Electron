{
    "compilerOptions": {
      "target": "es2015",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "./src",
      "paths": {
        "@api/*": ["api/*"],
        "@charts/*": ["charts/*"],
        "@components/*": ["components/*"],
        "@contexts/*": ["contexts/*"],
        "@hooks/*": ["hooks/*"],
        "@images/*": ["images/*"],
        "@interfaces/*": ["interfaces/*"],
        "@lib/*": ["lib/*"],
        "@pages/*": ["pages/*"],
        "@ui/*": ["ui/*"],
        "@utils/*": ["utils/*"],
      },
    },
    "include": ["src/**/*"]
  }
  